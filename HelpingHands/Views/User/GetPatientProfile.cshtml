@model Patient
@inject IHttpContextAccessor contextAccessor;
@{
    ViewData["Title"] = "GetPatientProfile";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}


<style>
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>


<div class="container">
    <div class="main-body">


        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="rounded-circle" style="width: 150px;">
                                @if (Model != null && Model.Picture != null)
                                {
                                    var imageBase64Data = Convert.ToBase64String(Model.Picture);
                                    var imageDataUrl = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                                    <img src="@imageDataUrl" width="100" height="100" class="rounded-circle" />
                                }
                                else
                                {
                                    <img src="~/css/Default.jpg" width="100" height="100" class="rounded-circle" />
                                }
                            </div>



                            <div class="mt-3">
                                <h4>@Html.DisplayFor(Model => Model.Fullname)</h4>
                                <p class="text-secondary mb-1">@Html.DisplayFor(Model => Model.DoB)</p>
                                <p class="text-muted font-size-sm">@contextAccessor.HttpContext?.Session.GetString("UserTypeDescription")</p>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.Name)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Surname</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.Surname)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.Gender)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">ID Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.IDNumber)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Emergency Contact Person</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.ContactPerson)
                            </div>
                        </div> <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Emergency Contact Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.ContactPersonNumber)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Emergency Contact Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(Model => Model.AdditionalInform)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                @if (Model != null)
                                {
                                    <a asp-action="UpdatePatientProfile" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
                                }
                                else
                                {
                                    <a asp-action="UpdatePatientProfile" asp-controller="User" asp-route-id="@Model.UserId" class="btn btn-primary">Edit Profile</a>
                                }
                                
                            </div>
                        </div>
                    </div>
                </div>





            </div>
        </div>

    </div>
</div>