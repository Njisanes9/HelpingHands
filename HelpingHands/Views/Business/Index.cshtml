@model List<HelpingHands.Models.HelpingHandsBusiness>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #ffffff;
            height: 100vh;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        .center {
            text-align: center;
            margin: 2% 10%;
        }

            .center h2 {
                font-weight: bold;
            }

        .button-container {
            float: left;
            margin: 20px 0;
        }

        .content-table {
            background: #ffffff;
            border-collapse: collapse;
            font-size: 0.9em;
            width: 100%;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

            .content-table thead tr {
                background-color: lightblue;
                color: #ffffff;
                text-align: left;
                font-weight: bold;
            }

            .content-table th,
            .content-table td {
                padding: 12px 15px;
            }

            .content-table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                .content-table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .content-table tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .content-table tbody tr .active-row {
                    font-weight: bold;
                    color: #009879;
                }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <div class="center">
        <h2> Organisation Information</h2>
        <hr>
        
        <table class="content-table">
            <thead>
                <tr>
                    <th>Organisation Name</th>
                    <th>NPO Number</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Contact Number</th>
                    <th>Operating Hours</th>
                    <th>Picture</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var info in Model)
                    {
                        <tr>
                            <td>@info.orgName</td>
                            <td>@info.npoNumber</td>
                            <td>@info.Email</td>
                            <td>@info.address</td>
                            <td>@info.contactNumber</td>
                            <td>@info.operatingHours</td>
                            <td>
                                @if(info.picture != null)
                                {
                                    var imageBase64Data =Convert.ToBase64String(info.picture);
                                    var imageDataUrl = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                                    <img src="@imageDataUrl" width="100" height="100"/>
                                }

                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-controller="Business" asp-route-id="@info.businessId" class="btn btn-primary">Edit</a>
                                    &nbsp
                                    
                                </div>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td colspan="2">
                            <div>No records available!</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>