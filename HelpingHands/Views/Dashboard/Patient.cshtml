
@{
    ViewData["Title"] = "Patient";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<link rel="stylesheet" href="~/css/dashboardstyle.css">

	<title>Patient</title>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<div class="container">
		<section id="content">

			<main>
				
				<ul class="box-info">
					<li title="Book care contract">
						<a asp-controller="Contract" asp-action="CreateContract">
							<i class='bx bxs-receipt'></i>
							<span class="text">
								<h3>Book Contract</h3>

							</span>
						</a>
						
					</li>
					<li title="View care visits">
						<a asp-controller="CareVisit" asp-action="GetPatientCareVisit">
							<i class='bx bxs-location-plus'></i>
							<span class="text">
								<h3>View Care Visits</h3>

							</span>
						</a>
						
					</li>
					<li title="View chronic conditions">
						<a asp-controller="PatientCondition" asp-action="Index">
							<i class='bx bxs-donate-heart'></i>
							<span class="text">
								<h3>Chronic Condition</h3>

							</span>
						</a>
						
					</li>

				</ul>
				
			</main>

		</section>

	</div>
	<script src="~/js/Dashboardscript.js"></script>
</body>
</html>
