<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width-device-with, initial-scale=1.0" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="~/css/LayoutStyle.css" />
</head>
<body>
    <header>
        <a href="#" class="logo">
            <img src="~/css/logo.jpeg">
            Helping Hands
        </a>

        <input type="checkbox" id="menu-bar" />
        <label for="menu-bar">Menu</label>

        <nav class="navbar">
            <ul>
                <li><a><i class="fa-solid fa-gauge"></i>Dashboard</a></li>
                <li><a id="about"><i class="fa-solid fa-file-contract"></i>Users</a></li>
                <li><a id="contact">Cities</a></li>
                <li><a id="services">Company Profile</a></li>

                <li>
                    <a>User Account +</a>
                    <ul>
                        <li><a asp-controller="User" asp-action="Profile" class="profile">Profile <img src="~/css/dorothy.jpg"></a></li>
                        <li><a asp-controller="Home" asp-action="Index">Logout</a></li>
                    </ul>
                </li>

            </ul>


        </nav>
    </header>


    <div class="container">
        @RenderBody()
    </div>
</body>
</html>


