    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    
    <link href="~/css/webform.css" rel="stylesheet" media="all">
    <style>
        .label::after {
            content: " *";
            color: red;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Add New City</h2>
                    <form method="post" enctype="multipart/form-data" action="Create">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label" asp-for="CityName"></label>
                                    <input class="input--style-4" asp-for="CityName" type="text" name="first_name">
                                    <span asp-validation-for="CityName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label" asp-for="Abbreviation"></label>
                                    <input class="input--style-4" asp-for="Abbreviation" type="text" name="first_name">
                                    <span asp-validation-for="Abbreviation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                       
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
