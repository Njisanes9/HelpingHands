@model HelpingHands.Models.Suburb
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">


    <title>Manage Suburbs</title>


    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">


    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">


    <link href="~/css/webform.css" rel="stylesheet" media="all">
    <style>
        .label::after {
            content: " *";
            color: red;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
       <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Add New Suburb</h2>
                    <form method="post" enctype="multipart/form-data" action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label" asp-for="SuburbName"></label>
                                    <input class="input--style-4" asp-for="SuburbName" type="text" required/>
                                    <span asp-validation-for="SuburbName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label" asp-for="PostalCode"></label>
                                    <input class="input--style-4" asp-for="PostalCode" type="text" required >
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label class="label" asp-for="CityId"></label>
                            <div class="rs-select2 js-select-simple select--no-search">
                            </div>
                            <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityList">
                                
                                    <option disabled="disabled" selected="selected">--Select City--</option>
                                    
                                
                                
                            </select>
                        </div>
                        

                        <div class="p-t-15">
                            <input class="btn btn--radius-2 btn--blue" type="submit" value="Submit"/>
                        </div>
                    </form>
               </div>
            </div>
       </div>
   </div>
   

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>

