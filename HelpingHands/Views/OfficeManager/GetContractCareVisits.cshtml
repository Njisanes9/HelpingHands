@model List<HelpingHands.ViewModels.ContractCareVisits>
@{
    ViewData["Title"] = "GetContractCareVisits";
    Layout = "~/Views/Shared/_LayoutOfficeManager.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #ffffff;
            height: 100vh;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        .center {
            text-align: center;
            margin: 2% 10%;
        }

            .center h2 {
                font-weight: bold;
            }

        .button-container {
            float: left;
            margin: 20px 0;
        }

        .content-table {
            background: #ffffff;
            border-collapse: collapse;
            font-size: 0.9em;
            width: 100%;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

            .content-table thead tr {
                background-color: lightblue;
                color: #ffffff;
                text-align: left;
                font-weight: bold;
            }

            .content-table th,
            .content-table td {
                padding: 12px 15px;
            }

            .content-table tbody tr {
                border-bottom: 1px solid #dddddd;
            }

                .content-table tbody tr:nth-of-type(even) {
                    background-color: #f3f3f3;
                }

                .content-table tbody tr:last-of-type {
                    border-bottom: 2px solid #009879;
                }

                .content-table tbody tr .active-row {
                    font-weight: bold;
                    color: #009879;
                }



        .pagination {
            text-align: center;
            margin-top: 20px;
        }

            .pagination a, .page-number {
                display: inline-block;
                padding: 5px 10px;
                margin: 0 5px;
                border: 1px solid #ccc;
                text-decoration: none;
                color: #333;
                border-radius: 4px;
                background-color: #f5f5f5;
            }

                .pagination a:hover {
                    background-color: #eee;
                }

                .page-number.active {
                    background-color: #28bf96;
                    color: #fff;
                }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
</head>
<body>

    <div class="center">
        <h2> Care Visits By Contract</h2>
        <hr>
        <div class="button-container">
            <a asp-action="GenerateContractReport" asp-controller="OfficeManager" class="btn btn-primary">Print Report</a>
        </div>
        <hr>
        @if (TempData["errorMessage"] != null)
        {
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Exception: </strong> @TempData["errorMessage"]

              </div>
            
        }
        <input type="text" id="searchInput" placeholder="Search...">
        <table class="table content-table datatable">
            <thead>
                <tr>
                    <th>Patient Name</th>
                    <th>Address Line 1</th>
                    <th>Contract Date</th>
                    <th>Visit Date</th>
                    <th>Contract Date</th>
                    <th>Approximate Arrival Time</th>
                    <th>Visit Arrival Time</th>
                    <th>Depart Time</th>
                    <th>Wound Condition</th>
                    
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var visits in Model)
                    {
                        <tr>
                            <td>@visits.Fullname</td>
                            <td>@visits.AddressLine1</td>
                            <td>@visits.ContractDate.ToString("dd/MM/yyyy")</td>
                            <td>@visits.VisitDate.ToString("dd/MM/yyyy")</td>
                            <td>@visits.ApproxArrival.ToString(@"hh\:mm")</td>
                            <td>@visits.ArrivalTime.ToString(@"hh\:mm")</td>
                            <td>@visits.DepartTime.ToString(@"hh\:mm")</td>
                            <td>@visits.WoundCondition;</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">
                            <div>No records available!</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            <a href="#" class="prev">&laquo; Previous</a>
            <span class="page-numbers"></span>
            <a href="#" class="next">Next &raquo;</a>
        </div>


    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

    <script>

        document.getElementById("searchInput").addEventListener("input", function () {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.querySelector(".table");
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) {
                var found = false;
                var tds = tr[i].getElementsByTagName("td");
                for (var j = 0; j < tds.length; j++) {
                    td = tds[j];
                    if (td) {
                        txtValue = td.textContent || td.innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            found = true;
                            break;
                        }
                    }
                }
                if (found) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            var pagination = document.querySelector('.pagination');
            var pageNumbersContainer = pagination.querySelector('.page-numbers');
            var prevButton = pagination.querySelector('.prev');
            var nextButton = pagination.querySelector('.next');
            var tableRows = document.querySelectorAll('.table tbody tr');

            var totalPages = 10;

            var currentPage = 1;

            function updatePageNumbers() {
                var pageNumbersHTML = '';

                for (var i = 1; i <= totalPages; i++) {
                    pageNumbersHTML += `<span class="page-number ${i === currentPage ? 'active' : ''}">${i}</span>`;
                }

                pageNumbersContainer.innerHTML = pageNumbersHTML;
            }

            function handlePrevButtonClick() {
                if (currentPage > 1) {
                    currentPage--;
                    updatePageNumbers();
                    updateTableDisplay();
                }
            }

            function handleNextButtonClick() {
                if (currentPage < totalPages) {
                    currentPage++;
                    updatePageNumbers();
                    updateTableDisplay();
                }
            }

            prevButton.addEventListener('click', handlePrevButtonClick);
            nextButton.addEventListener('click', handleNextButtonClick);

            pageNumbersContainer.addEventListener('click', function (event) {
                if (event.target.classList.contains('page-number')) {
                    currentPage = parseInt(event.target.textContent);
                    updatePageNumbers();
                    updateTableDisplay();
                }
            });

            function updateTableDisplay() {
                for (var i = 0; i < tableRows.length; i++) {
                    if (i >= (currentPage - 1) * 5 && i < currentPage * 5) {
                        tableRows[i].style.display = '';
                    } else {
                        tableRows[i].style.display = 'none';
                    }
                }
            }

            updatePageNumbers();

            updateTableDisplay();
        });


    </script>

</body>
</html>
