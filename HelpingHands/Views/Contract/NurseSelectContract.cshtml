@model HelpingHands.ViewModels.CareContractVM
@{
    ViewData["Title"] = "NurseSelectContract";
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";
}

<style>
    .required::after {
        content: " *";
        color: red;
        font-size: 20px;
    }

    .card {
        border: none
    }

    .image {
        position: relative
    }

        .image span {
            background-color: blue;
            color: #fff;
            padding: 6px;
            height: 30px;
            width: 30px;
            border-radius: 50%;
            font-size: 13px;
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            top: -0px;
            right: 0px
        }

    .user-details h4 {
        color: blue
    }

    .ratings {
        font-size: 30px;
        font-weight: 600;
        display: flex;
        justify-content: left;
        align-items: center;
        color: #f9b43a
    }

    .user-details span {
        text-align: left
    }

    .inputs label {
        display: flex;
        margin-left: 3px;
        font-weight: 500;
        font-size: 13px;
        margin-bottom: 4px
    }

    .inputs input {
        font-size: 14px;
        height: 40px;
        border: 2px solid #ced4da
    }

        .inputs input:focus {
            box-shadow: none;
            border: 2px solid blue
        }

    .about-inputs label {
        display: flex;
        margin-left: 3px;
        font-weight: 500;
        font-size: 13px;
        margin-bottom: 4px
    }

    .about-inputs textarea {
        font-size: 14px;
        height: 100px;
        border: 2px solid #ced4da;
        resize: none
    }

        .about-inputs textarea:focus {
            box-shadow: none
        }

    .btn {
        font-weight: 600
    }

        .btn:focus {
            box-shadow: none
        }
</style>
<div class="container mt-3">
    <div class="card p-3 text-center">

        <h3>Select Contract</h3>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Model Error: </strong> @TempData["ErrorMessage"]
               
            </div>
        }
        @if (TempData["UpdateProfile"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>No Profile Details: </strong> @TempData["UpdateProfile"]

            </div>
        }
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Important</h4>
            <p>Please select a start date to specify when you are available to start working on this contract</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="post">
            <div class="row">
                <input type="hidden" asp-for="ContractId" />
                <input type="hidden" asp-for="Status" />
                <div class="col-md-6">
                    <div class="inputs">
                        <label asp-for="StartDate" class="required"></label>
                        <input asp-for="StartDate" class="form-control" type="date">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div>
                <input asp-action="AddressLine1" value="AddressLine1" type="hidden" />
            </div>
            

            <div class="mt-3 d-flex justify-end">
                <button class="px-3 btn btn-sm btn-outline-primary" asp-controller="Contract" asp-action="GetNurseContract">Cancel</button>
                <button class="px-3 btn btn-sm btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

